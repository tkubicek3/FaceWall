<div class="CoverImage CoverImageCompact FlexEmbed FlexEmbed--3by1"
     style="background-image: url(<%= @user.cover_photo.url %>);"
></div>

<table width="100%">
  <tr>
    <td>
      <img class="profile" src="<%= @user.avatar.url(:medium) %>"/>
    </td>
    <td style="width: 100%;">
      <p class="full-name"><b><%= link_to @user.full_name, user_path(@user.id), :class => 'link-def-w' %></b><br> <br><%= @user.email %></p>
    </td>
  </tr>
</table>