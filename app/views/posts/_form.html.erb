<%= form_for @post, :html => {:class => "form-horizontal post"} do |f| %>
    <% if @post.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div style="float: left;">
      <p class="image round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></p>
    </div>

    <div style="float: left; width: 64%; padding: 2px 0 0 12px;">
      <div>
        <%= f.text_area :content, :class => 'form-control', placeholder: 'What is on your mind?', :style => 'resize:vertical;' %>
      </div>
    </div>

    <div class="add-photo">
      <% (@post.id) ? label = 'Change photo' : label = 'Add photo' %>
      <%= f.label label %>
      <%= f.file_field :image %>
    </div>

    <div style="clear: both; margin-left: 62px; padding-top: 8px;">
      <div>
        <% (@post.id) ? label = 'Update post' : label = 'Add post' %>
        <%= f.submit label, :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>