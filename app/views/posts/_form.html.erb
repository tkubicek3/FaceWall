<%= form_for @post, :html => {:class => "form-horizontal post"} do |f| %>

    <% if @post.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    Update status

    <p class="image round-image-40"><%= image_tag(current_user.avatar.url(:thumb)) %></p>

    <div class="form-group">
      <div class="col-lg-10">
        <%= f.text_field :content, :class => 'form-control', placeholder: 'What is on your mind?' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Add Photo' %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
      </div>
    </div>

<% end %>
