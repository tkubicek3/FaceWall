<%= render 'users/cover_and_profile_compact' %>

<div class="content-block" style="padding-bottom: 35px;">
  <%= render :partial => 'form' %>
</div>

<% @posts.each do |post| %>
    <div class="content-block" style="padding-bottom: 35px;">

      <ul class="" style="margin-right: 0px;">
        <li>  <%= post.user.full_name %></li>
        <li>post.created_at %></li>
        <li><%= post.content %></li>
      </ul>

      <p class="image round-image-40"><%= image_tag(post.user.avatar.url(:thumb)) %></p>
      <%= post.user.full_name %>
      <%= post.created_at %>
      <%= post.content %>

      <p class="image round-image-40"><%= image_tag(post.gallery_image.photo.url(:thumb)) if post.gallery_image %></p>



      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_post_path(post), :class => 'btn btn-default btn-xs' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  post_path(post),
                  :method => :delete,
                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                  :class => 'btn btn-xs btn-danger' %>
    </div>
<% end %>